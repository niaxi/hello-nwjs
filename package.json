{
  "name": "Hello-NWjs",
  "version": "0.0.1",
  "description": "",
  "main": "./src/index.html",
  "window": {
    "show": true,
    "toolbar": true,
    "title": "Hello NWjs ...",
    "min_width": 400,
    "min_height": 500
  },
  "platformOverrides": {
    "osx": {
      "window": {
        "toolbar": false
      }
    },
    "win": {
      "window": {
        "toolbar": false
      }
    }
  },
  "scripts": {
    "start": "nw .",
    "clean": "rimraf ./dist/*",
    "clean:win": "rimraf ./dist/Hello-NWjs/*win64*",
    "clean:mac": "rimraf ./dist/Hello-NWjs/*osx64*",
    "package:win": "npm run clean:win && nwbuild -p win64 -v 0.12.3 -o ./dist \"./**/**,!./node_modules/**/**,!./dist/**\"",
    "package:mac": "npm run clean:mac && nwbuild -p osx64 -v 0.12.3 -o ./dist \"./**/**,!./node_modules/**/**,!./dist/**\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niaxi/hello-nwjs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niaxi/hello-nwjs/issues"
  },
  "homepage": "https://github.com/niaxi/hello-nwjs",
  "devDependencies": {
    "nw": "^0.12.3",
    "nw-builder": "^2.0.2",
    "rimraf": "^2.4.3"
  }
}
